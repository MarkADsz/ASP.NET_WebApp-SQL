@page
@model WebApplication1.Pages.Movies.IndexModel
@{
}
<br>
<h2>List of Movies</h2>
<a class="btn btn-primary btn-sm" href="/Movies/Create">New Movie</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Year</th>
            <th>Main Genre</th>
            <th>Added At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listMovies)
        {
            <tr>
                <th>@item.id</th>
                <th>@item.movie_name</th>
                <th>@item.movie_year</th>
                <th>@item.movie_genre</th>
                <th>@item.addedAt</th>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Movies/Edit?id=@item.id">Edit</a>

                    <a class="btn btn-primary btn-sm" href="/Movies/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>